function( _ebsSysconfConfigureArch )
    if( CMAKE_CL_64 )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_ARCH_BIT 64 )
    else()
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_ARCH_BIT ${CM_EBS_SYSCONF_TARGET_ARCH_DEFAULT_BIT} )
