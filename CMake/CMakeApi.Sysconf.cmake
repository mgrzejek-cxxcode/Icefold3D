function( _ebsSysconfConfigureBuildcfg )
    if( "${CMAKE_BUILD_TYPE}" STREQUAL "Debug" )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_BUILDCONFIG "Debug" )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_DEBUG_ENABLED 1 )
        set( CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -D DEBUG=1" )
    else()
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_BUILDCONFIG "Release" )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_DEBUG_ENABLED 0 )
    endif()
endfunction()


#@FunDef ebsSysconfInitialize
#@DocStr
function( ebsSysconfInitialize )
    ebsClearInternalCache()

    _ebsSysconfDetectHostPlatformSetup()
    _ebsSysconfDetectHostCompiler()
    _ebsSysconfDetectTargetPlatform()
    _ebsSysconfConfigureArch()
    _ebsSysconfConfigureBuildcfg()

    foreach( variable ${CM_EBS_VARREG} )
        message( "${variable} -> ${${variable}}" )
    endforeach()

    add_compile_definitions( "IC3_DEBUG=${CM_EBS_SYSCONF_TARGET_DEBUG_ENABLED}" )
endfunction()
