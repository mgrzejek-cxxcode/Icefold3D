function( _ebsSysconfDetectHostCompiler )

    if( MINGW )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "MinGW" )
        #add_compile_options( "-std=c++${CXX_STANDARD}" )
    elseif ( "${CMAKE_CXX_COMPILER_ID}" STREQUAL "armCC" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "armCC" )
    elseif ( "${CMAKE_CXX_COMPILER_ID}" MATCHES "Clang" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "Clang" )
        #add_compile_options( "-std=c++${CXX_STANDARD}" )
    elseif ( "${CMAKE_CXX_COMPILER_ID}" STREQUAL "GNU" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "GCC" )
        #add_compile_options( "-std=c++${CXX_STANDARD}" )
    elseif ( "${CMAKE_CXX_COMPILER_ID}" STREQUAL "Intel" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "ICC" )
    elseif ( "${CMAKE_CXX_COMPILER_ID}" STREQUAL "NVIDIA" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "NVCUDA" )
    elseif ( "${CMAKE_CXX_COMPILER_ID}" STREQUAL "MSVC" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER "MSVC" )
        if( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "16\\.*"  )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2010 )
        elseif( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "17\\.*" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2012 )
        elseif( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "18\\.*" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2013 )
        elseif( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "19\\.0[0-9]*" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2015 )
        elseif( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "19\\.1[1-9]*" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2017 )
        elseif( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "19\\.2[0-4]*" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2019 )
        elseif( "${CMAKE_CXX_COMPILER_VERSION}" MATCHES "19\\.4[0-4]*" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION 2022 )
        endif()
    endif()

    if( NOT CM_EBS_SYSCONF_HOST_COMPILER_VERSION )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_COMPILER_VERSION ${CMAKE_CXX_COMPILER_VERSION} )
    endif()

    if( CMAKE_GENERATOR_PLATFORM )
        if( "${CMAKE_GENERATOR}" MATCHES "Visual Studio" )
            if( "${CMAKE_GENERATOR_PLATFORM}" MATCHES "^arm$" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "arm" )
            elseif( "${CMAKE_GENERATOR_PLATFORM}" MATCHES "arm64" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "arm64" )
            elseif( "${CMAKE_GENERATOR_PLATFORM}" MATCHES "Win64|x86_64|X86_64" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "x86-64" )
            elseif( "${CMAKE_GENERATOR_PLATFORM}" MATCHES "IA32|^x86$|^X86$" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "x86" )
            endif()
        endif()
    else()
        if( "${CMAKE_CXX_COMPILER_ID}" MATCHES "MSVC" )
            if( "${CMAKE_MODULE_LINKER_FLAGS}" MATCHES "^arm$" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "arm" )
            elseif( "${CMAKE_MODULE_LINKER_FLAGS}" MATCHES "arm64" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "arm64" )
            elseif( "${CMAKE_MODULE_LINKER_FLAGS}" MATCHES "x64|X64" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "x86-64" )
            elseif( "${CMAKE_MODULE_LINKER_FLAGS}" MATCHES "x86|X86" )
                ebsSetInternal( CM_EBS_SYSCONF_HOST_TOOLSET_ARCH "x86" )
            endif()
        endif()
    endif()

    if( "${EBSVAR_Sysconf_Host_ToolsetArch}" MATCHES "${_EBS_CDEF_MATCH_STR_ARCH_32}" )
        ebsSetInternal( "CM_EBS_SYSCONF_HOST_TOOLSET_ARCH_BIT" "32" )
    elseif( "${EBSVAR_Sysconf_Host_ToolsetArch}" MATCHES "${_EBS_CDEF_MATCH_STR_ARCH_64}" )
        ebsSetInternal( "CM_EBS_SYSCONF_HOST_TOOLSET_ARCH_BIT" "64" )
    endif()

endfunction()

function( _ebsSysconfDetectHostPlatformSetup )
    # Get name of the host system.
    ebsQueryHostSystemName( hostSystemName  )
    if( NOT hostSystemName )
        message( FATAL_ERROR "The host system could not be determined." )
        return()
    endif()
    # Store the host name in the VMS registry.
    ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_NAME ${hostSystemName} )
    # Handle Windows family first. It's really optional, but I found the ability to check the exact version quite useful.
    if( ${CM_EBS_SYSCONF_HOST_SYSTEM_NAME} STREQUAL "WinDesktop" )
        if( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "10\\.0\\.[0-9]+(\\.[0-9]+)?" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION 10.0 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.3\\.96[0-9]+" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION 8.1U1 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.3\\.92[0-9]+" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION 8.1 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.2\\.92[0-9]+" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION 8.0 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.1\\.7601" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION 7SP1 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.1\\.7600" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION 7 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.0\\.6002" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION VistaSP2 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.0\\.6001" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION VistaSP1 )
        elseif( ${CMAKE_HOST_SYSTEM_VERSION} MATCHES "6\\.0\\.6000" )
            ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION Vista )
        endif()
    endif()

    if( NOT CM_EBS_SYSCONF_HOST_SYSTEM_VERSION )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_SYSTEM_VERSION "${CMAKE_HOST_SYSTEM_VERSION}" )
    endif()

    if( ${CM_EBS_SYSCONF_HOST_SYSTEM_NAME} MATCHES "Android|Linux" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_SHARED_LIB_EXT     .so )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_SHARED_LIB_PREFIX  lib )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_STATIC_LIB_EXT     .a )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_STATIC_LIB_PREFIX  lib )
    elseif( ${CM_EBS_SYSCONF_HOST_SYSTEM_NAME} MATCHES "WinDesktop" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_SHARED_LIB_EXT     .dll )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_SHARED_LIB_PREFIX  OFF )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_STATIC_LIB_EXT     .lib )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_STATIC_LIB_PREFIX  OFF )
    elseif( ${CM_EBS_SYSCONF_HOST_SYSTEM_NAME} MATCHES "macOS" )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_SHARED_LIB_EXT     .dylib )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_SHARED_LIB_PREFIX  lib )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_STATIC_LIB_EXT     .a )
        ebsSetInternal( CM_EBS_SYSCONF_HOST_PROP_STATIC_LIB_PREFIX  lib )
    endif()

endfunction()

function( _ebsSysconfDetectTargetPlatform )
    # Target system may be set via config for cross-compiling, check.
    if( NOT CM_EBS_SYSCONF_TARGET_SYSTEM )
        ebsQueryTargetSystemName( targetSystemName )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_SYSTEM ${targetSystemName} )
    endif()

    if( NOT CM_EBS_SYSCONF_TARGET_SYSTEM )
        message( FATAL_ERROR "Current platform (${CMAKE_SYSTEM_NAME}) is not supported." )
    endif()

    if( "${CM_EBS_SYSCONF_TARGET_SYSTEM}" STREQUAL "Android" )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_PLATFORM  "Android" )
        ebsSetInternal( CM_EBS_SYSCONF_TARGET_LIBRARY_SUBDIR  "android" )
